<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:TipsHelper;assembly=TipsHelper"
	x:Class="TipsHelper.MainMenu">
	<ContentPage.Content>
		<StackLayout x:Name="layout_entry" Margin="20">

	<Label x:Name="labelLunchAmount" Text = "Lunch Amount" />
	<Entry x:Name="entryAmount" Keyboard="Numeric" />
	<Label x:Name="labelTip" Text = "Tip" />
	<Entry x:Name="entryTip" IsEnabled="false"/>
	<Label x:Name="labelTotalAmount" Text = "Total Amount" />
	<local:MyEntry x:Name="entryTotalAmount" IsEnabled="false" />
	<Label x:Name="labelQualityService" Text = "Quality Service" />
	<Slider  Maximum="0.30" Minimum="0.0" Value="0.15" x:Name="sliderQualityService" />
	<Label x:Name="labelQualityServiceDesc" />	
		</StackLayout>
		
	</ContentPage.Content>
</ContentPage>
